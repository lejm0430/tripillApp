        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.mobileapp.tripill.Activity.PharmacyMap" android:screenOrientation="portrait"/>

        <activity
            android:name="com.mobileapp.tripill.Activity.PillRecommendActivity"
